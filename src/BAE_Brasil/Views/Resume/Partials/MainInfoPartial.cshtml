@model Resume
<div id="main-info" class="d-flex flex-column justify-content-center">
    <div class="d-flex flex-column">
        <h4>Informações gerais:</h4>
        <div class="border-bottom border-secondary w-100"></div>
    </div>
    <div class="mt-2">
        <span class="font-weight-bold">Nacionalidade:</span>
        <span>@Model.Nationality</span>
    </div>
    <div class="mt-2">
        <span class="font-weight-bold">Objetivos:</span>
        <span class="text-justify text-break">@Model.Goal</span>
    </div>
</div>