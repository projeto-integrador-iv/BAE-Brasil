@model ResumeViewModel

<div class="d-flex justify-content-center">
    <div class="w-75 mt-2">
        <div class="mb-4 border-bottom border-dark d-flex justify-content-center">
            <h2 id="register-title">
                Curr√≠culo de @Model.FullName
            </h2>
        </div>
        <div class="d-flex flex-column">
            <div id="main-col">
                <partial name="Partials/MainInfoPartial" model="@Model.Resume"/>
            </div>
            <div class="mt-3">
                <partial name="Partials/ProfessionalExperienceDisplayPartial" model="@Model.Resume"/>  
                <a asp-action="AddProfessionalExperience" 
                   class="btn btn-outline-success font-weight-bold text-success w-100 mt-1">Adicionar</a>
            </div>
            <div class="mt-3">
                <partial name="Partials/DegreesDisplayPartial" model="@Model.Resume"/>
                <a asp-action="AddDegree" 
                   class="btn btn-outline-success font-weight-bold text-success w-100 mt-1">Adicionar</a>
            </div>
            <div class="mt-3">
                 <partial name="Partials/LanguagesDisplayPartial" model="@Model.Resume"/>
                 <a asp-action="AddLanguage" 
                    class="btn btn-outline-success font-weight-bold text-success w-100 mt-1">Adicionar</a>
            </div>
        </div>
    </div>
</div>
