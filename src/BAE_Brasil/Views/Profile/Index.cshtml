@using BAE_Brasil.Identity.Utils.ViewRenderers
@model UserProfileViewModel
@{
    var render = new PropertyRenderer(Model.UserType);
}
<div class="d-flex justify-content-center">
    <div class="w-75 mt-2">
        <div class="mb-4 border-bottom border-dark d-flex justify-content-center">
            <h2 id="register-title">
                Perfil de @Model.ProfileData.FullName
            </h2>
        </div>
        <div class="d-flex">
            <div id="col1" class="mr-4 w-100">
                <div id="identification" class="d-flex flex-column justify-content-center">
                    <div class="d-flex flex-column">
                        <h4>Informações gerais</h4>
                        <div class="border-bottom border-secondary w-100"></div>
                    </div>
                    <div class="mt-2">
                        <span class="font-weight-bold">Email:</span>
                        <span>@Model.Email</span>
                    </div>
                    <div class="mt-2">
                        <span class="font-weight-bold">
                            @render.ByUserType("Data de Nascimento", "Data de Criação"):
                        </span>
                        <span>@Model.ProfileData.BirthDate.ToString("d")</span>
                    </div>
                </div>
                <div id="documents" class="d-flex flex-column justify-content-center mt-4">
                    <div class="d-flex flex-column">
                        <h4>Documentação</h4>
                        <div class="border-bottom border-secondary w-100"></div>
                    </div>
                    <div>
                        @foreach (var doc in @Model.ProfileData.Documents)
                        {
                            <div class="mt-2">
                                <span class="font-weight-bold">@doc.DocumentType.ToString():</span>
                                <span>@doc.Description</span>
                            </div>
                        }

                    </div>
                </div>
                <div id="contacts" class="d-flex flex-column justify-content-center mt-4">
                    <div class="d-flex flex-column">
                        <h4>Contatos</h4>
                        <div class="border-bottom border-secondary w-100"></div>
                    </div>
                    <div class="d-flex flex-column">
                        @foreach (var contact in @Model.ProfileData.Contacts)
                        {
                            <div class="mt-2">
                                <span class="font-weight-bold">@contact.ContactType.ToString():</span>
                                <span>@contact.Description</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div id="col2" class="ml-4 w-100">
                <div id="address" class="d-flex flex-column justify-content-center">
                    <div class="d-flex flex-column mb-2">
                        <h4>Endereço</h4>
                        <div class="border-bottom border-secondary w-100"></div>
                    </div>
                    @if (Model.ProfileData.Address == null)
                    {
                       <partial name="Partials/AddressFormPartial" model="@Model"/>
                    }
                    else
                    {
                        <div class="mt-2">
                            <span class="font-weight-bold">Rua:</span>
                            <span>@Model.ProfileData.Address.Street</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">Número:</span>
                            <span>@Model.ProfileData.Address.Number</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">Complemento:</span>
                            <span>@Model.ProfileData.Address.Complement</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">Bairro:</span>
                            <span>@Model.ProfileData.Address.Bairro</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">Cidade:</span>
                            <span>@Model.ProfileData.Address.City</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">Estado:</span>
                            <span>@Model.ProfileData.Address.State</span>
                        </div>
                        <div class="mt-2">
                            <span class="font-weight-bold">CEP:</span>
                            <span>@Model.ProfileData.Address.Cep</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
